@model List<ExchangeWebsite.Models.Category>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: #f4f4f9;
    }
    .main-content {
        max-width: 1000px;
        margin: 40px auto;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        padding: 40px 32px 32px 32px;
    }
    .create-btn {
        display: block;
        width: 200px;
        margin: 0 auto 32px auto;
        font-size: 1.2rem;
        font-weight: 600;
        background: #007bff;
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 16px 0;
        transition: background 0.2s;
        text-align: center;
        text-decoration: none;
    }
    .create-btn:hover {
        background: #0056b3;
        color: #fff;
    }
    .category-section {
        margin-bottom: 40px;
        padding-left: 18px;
        border-left: 4px solid #007bff;
    }
    .category-section h3 {
        margin: 0 0 18px 0;
        font-size: 2rem;
        color: #222;
        font-weight: 700;
    }
    .category-list {
        display: flex;
        flex-wrap: wrap;
        gap: 18px;
        margin-bottom: 0;
        padding-left: 0;
        list-style: none;
    }
    .category-list li {
        margin: 0;
        padding: 0;
    }
    .category-list li a {
        display: inline-block;
        background: #e7f1ff;
        color: #007bff;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 10px;
        text-decoration: none;
        transition: background 0.2s, color 0.2s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }
    .category-list li a:hover {
        background: #007bff;
        color: #fff;
    }
    @@media (max-width: 900px) {
        .main-content { padding: 20px 8px; }
        .category-section h3 { font-size: 1.3rem; }
        .category-list li a { font-size: 1rem; padding: 10px 16px; }
    }
</style>

<div class="main-content">
    <a href="@Url.Action("CreatePost", "Category")" class="create-btn">Create Post</a>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("MyPost", "Category")" class="create-btn" style="background:#28a745;margin-bottom:16px;">Your Post</a>
    }
    @foreach (var category in Model)
    {
        <div class="category-section">
            <h3>@category.CategoryName</h3>
            <ul class="category-list">
                @foreach (var subCategory in category.SubCategories.OrderBy(sc => sc.DisplayOrder))
                {
                    <li>
                        <a href="@Url.Action("Index", "Category", new { id = subCategory.CategoryId })">
                            @subCategory.CategoryName
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>