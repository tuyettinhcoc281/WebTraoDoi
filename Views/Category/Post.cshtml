@model ExchangeWebsite.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h1>@Model.Title</h1>
    <div class="row">
        <div class="col-md-6">
            @if (Model.PostImages != null && Model.PostImages.Any())
            {
                <img src="@Model.PostImages.First().ImagePath" class="img-fluid rounded mb-3" alt="Post Image" />
            }
        </div>
        <div class="col-md-6">
            <h3 class="text-success">@Model.Price?.ToString("C0")</h3>
            <p><strong>Category:</strong> @Model.Category?.CategoryName</p>
            <p><strong>Location:</strong> @Model.City, @Model.ZipCode</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Contact Email:</strong> @Model.ContactEmail</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        </div>
    </div>
</div>