@model IEnumerable<ExchangeWebsite.Models.Post>
@{
    ViewData["Title"] = "Posts";
}
<h2>Posts</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>User</th>
            <th>Category</th>
            <th>Posted At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Title</td>
            <td>@post.User?.UserName</td>
            <td>@post.Category?.CategoryName</td>
            <td>@post.PostedAt.ToString("g")</td>
            <td>
                <a asp-action="PostDetail" asp-route-id="@post.PostId" class="btn btn-sm btn-info">View</a>
                <form asp-action="DeletePost" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@post.PostId" />
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this post?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>