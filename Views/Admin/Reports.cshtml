@model IEnumerable<ExchangeWebsite.Models.Report>
@{
    ViewData["Title"] = "Reported Posts";
}
<h2>Reported Posts</h2>
<table class="table">
    <thead>
        <tr>
            <th>Post</th>
            <th>Reporter</th>
            <th>Description</th>
            <th>Reported At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var report in Model)
    {
        <tr>
            <td>
                <a asp-controller="Category" asp-action="Post" asp-route-id="@report.PostId">
                    @report.Post?.Title
                </a>
            </td>
            <td>@report.Reporter?.UserName</td>
            <td>@report.Description</td>
            <td>@report.CreatedAt.ToString("g")</td>
            <td>
                <a asp-controller="Category" asp-action="Post" asp-route-id="@report.PostId" class="btn btn-sm btn-info">View Post</a>
            </td>
        </tr>
    }
    </tbody>
</table>